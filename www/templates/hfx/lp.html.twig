{% extends 'base.html.twig' %}

{% block title %}Welcome{% endblock %}

{% block stylesheet %}
    <style>
        html, body {
            background-color: #ececec;
            color: #636b6f;
            font-family: 'Raleway', sans-serif;
            font-weight: 100;
            height: 100vh;
            margin: 0;
        }
        .full-height {
            height: 100vh;
        }
        .flex-center {
            align-items: center;
            display: flex;
            justify-content: center;
        }
        .position-ref {
            position: relative;
        }
        .top-right {
            position: absolute;
            right: 10px;
            top: 18px;
        }
        .content {
            text-align: center;
        }
        .m-b-md {
            margin-bottom: 30px;
        }
        .img-responsive{
            height: auto;
            max-width: 100%;
            display: block;
            margin: 0 auto;
        }
        h1{
            box-shadow: 0px 0px 20px 10px #888888;
            border-radius: 100%;
            -webkit-transition: -webkit-transform .8s ease-in-out;
            transition: transform 2.5s ease-in-out;
            padding: 76px 54px;
        }
        h1:hover {
            -webkit-transform: rotate(360deg);
            transform: rotate(360deg);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="flex-center position-ref full-height">
        <div class="content">
            <div class="title m-b-md">
                <h1>HFX4</h1>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>console.log('Boom !')</script>
{% endblock %}