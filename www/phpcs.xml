<?xml version="1.0"?>
<ruleset name="HFX Code Standard">
    <description>Custom PHP CodeSniffer ruleset for HFX Framework</description>

    <!-- Include PSR-12 standard as base -->
    <rule ref="PSR12">
        <!-- Allow long lines for test data, comments, and URLs -->
        <exclude name="Generic.Files.LineLength" />
    </rule>

    <!-- PSR-1 Essentials -->
    <rule ref="PSR1">
        <!-- Ignore the side effects rule for index.php -->
        <exclude-pattern>public/index.php</exclude-pattern>
    </rule>

    <!-- Generic standards -->
    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />
    <rule ref="Generic.Classes.DuplicateClassName" />
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter" />
    <rule ref="Generic.CodeAnalysis.UselessOverridingMethod" />
    <rule ref="Generic.Formatting.SpaceAfterCast" />
    <rule ref="Generic.Formatting.SpaceAfterNot" />

    <!-- Squiz standards -->
    <rule ref="Squiz.Arrays.ArrayBracketSpacing" />
    <rule ref="Squiz.Classes.ValidClassName" />
    <rule ref="Squiz.Classes.SelfMemberReference" />
    <rule ref="Squiz.Commenting.DocCommentAlignment" />
    <rule ref="Squiz.PHP.DisallowInlineIf" />
    <rule ref="Squiz.Strings.DoubleQuoteUsage" />
    <rule ref="Squiz.Strings.EchoedStrings" />
    <rule ref="Squiz.WhiteSpace.LogicalOperatorSpacing" />
    <rule ref="Squiz.WhiteSpace.OperatorSpacing" />

    <!-- PHP Standards -->
    <rule ref="Zend.NamingConventions.ValidVariableName" />

    <!-- SlevomatCodingStandard-like rules -->
    <rule ref="PSR2.Classes.PropertyDeclaration" />
    <rule ref="PSR2.Methods.MethodDeclaration" />

    <!-- Line length configuration -->
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120" />
            <property name="absoluteLineLimit" value="150" />
        </properties>
    </rule>

    <!-- Indentation configuration -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="4" />
            <property name="tabIndent" value="false" />
        </properties>
    </rule>

    <!-- File paths to check -->
    <file>src</file>
    <file>tests</file>
    <file>config</file>

    <!-- Excluded paths -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/var/*</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>

    <!-- Show progress -->
    <arg value="p" />
    <!-- Use colors -->
    <arg name="colors" />
    <!-- Show sniff codes -->
    <arg value="s" />
</ruleset>
